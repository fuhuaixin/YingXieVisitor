<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="便民服务"
        android:textColor="@color/cr21"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_open_wifi"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1.5"
            android:background="@mipmap/ic_shadow_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_home_wifi_center" />

            <TextView
                android:id="@+id/tv_if_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未连接WiFi"
                android:textColor="@color/cr21"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="未连接"
                android:textColor="@color/cr21"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_3d"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_home_scenery" />

            <ImageView
                android:id="@+id/image_traffic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_home_traffic" />

            <ImageView
                android:id="@+id/tv_chief_public"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_home_online" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>